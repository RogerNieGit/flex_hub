<Application x:Class="ModernDesktopApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ModernDesktopApp"
             StartupUri="FlexHubWindow.xaml">
    <Application.Resources>
        <!-- Selectable Text Style - Use this for any text that should be copyable -->
        <Style x:Key="SelectableText" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Cursor" Value="IBeam"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="CaretBrush" Value="Transparent"/>
            <Setter Property="SelectionBrush" Value="#4A9EFF"/>
        </Style>
        
        <!-- Title style variant -->
        <Style x:Key="SelectableTitle" TargetType="TextBox" BasedOn="{StaticResource SelectableText}">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <!-- Subtitle style variant -->
        <Style x:Key="SelectableSubtitle" TargetType="TextBox" BasedOn="{StaticResource SelectableText}">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#888888"/>
        </Style>
    </Application.Resources>
</Application>
