<Window x:Class="ModernDesktopApp.DatabaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModernDesktopApp"
        mc:Ignorable="d"
        Title="FlexDesk Database Manager" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" Padding="20" CornerRadius="8" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="FlexDesk Database Manager" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="#333333"
                          Margin="0,0,0,5"/>
                <TextBlock x:Name="DatabasePath" 
                          FontSize="12" 
                          Foreground="#666666"
                          TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Database Info -->
        <Border Grid.Row="1" Background="White" Padding="15" CornerRadius="8" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Status: " FontSize="13" FontWeight="SemiBold" Margin="0,0,5,0"/>
                    <TextBlock x:Name="DatabaseStatus" FontSize="13" Foreground="#0078D4"/>
                    <TextBlock Text=" | Tables: " FontSize="13" FontWeight="SemiBold" Margin="15,0,5,0"/>
                    <TextBlock x:Name="TableCount" FontSize="13"/>
                    <TextBlock Text=" | Size: " FontSize="13" FontWeight="SemiBold" Margin="15,0,5,0"/>
                    <TextBlock x:Name="DatabaseSize" FontSize="13"/>
                </StackPanel>

                <Button Grid.Column="1" 
                       Content="Refresh" 
                       Style="{StaticResource ModernButton}"
                       Click="RefreshButton_Click"
                       Background="#28A745"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Tables List -->
            <Border Grid.Column="0" Background="White" Padding="15" CornerRadius="8" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Tables" 
                              FontSize="16" 
                              FontWeight="SemiBold" 
                              Foreground="#333333"
                              Margin="0,0,0,10"/>
                    <ListBox x:Name="TablesList" 
                            SelectionChanged="TablesList_SelectionChanged"
                            BorderThickness="0"
                            Background="Transparent"/>
                </StackPanel>
            </Border>

            <!-- Table Content -->
            <Border Grid.Column="1" Background="White" Padding="15" CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Table Info -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,10">
                        <TextBlock x:Name="SelectedTableName" 
                                  FontSize="18" 
                                  FontWeight="Bold" 
                                  Foreground="#333333"
                                  Margin="0,0,0,5"/>
                        <TextBlock x:Name="SelectedTableInfo" 
                                  FontSize="12" 
                                  Foreground="#666666"/>
                    </StackPanel>

                    <!-- Query Box -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,10">
                        <TextBlock Text="SQL Query:" 
                                  FontSize="13" 
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,5"/>
                        <TextBox x:Name="QueryTextBox" 
                                Height="60"
                                TextWrapping="Wrap"
                                AcceptsReturn="True"
                                VerticalScrollBarVisibility="Auto"
                                Padding="8"
                                FontFamily="Consolas"
                                FontSize="12"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <Button Content="Execute Query" 
                                   Style="{StaticResource ModernButton}"
                                   Click="ExecuteQueryButton_Click"
                                   Margin="0,0,10,0"/>
                            <Button Content="View All Rows" 
                                   Style="{StaticResource ModernButton}"
                                   Click="ViewAllButton_Click"
                                   Background="#6C757D"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Data Grid -->
                    <DataGrid x:Name="ResultsDataGrid" 
                             Grid.Row="2"
                             AutoGenerateColumns="True"
                             IsReadOnly="True"
                             AlternatingRowBackground="#F9F9F9"
                             HeadersVisibility="Column"
                             GridLinesVisibility="Horizontal"
                             CanUserResizeColumns="True"
                             CanUserSortColumns="True"
                             SelectionMode="Extended"/>

                    <!-- Results Info -->
                    <TextBlock Grid.Row="3" 
                              x:Name="ResultsInfo"
                              FontSize="12"
                              Foreground="#666666"
                              Margin="0,10,0,0"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="White" Padding="10" CornerRadius="8" Margin="0,15,0,0">
            <TextBlock x:Name="StatusMessage" 
                      FontSize="12" 
                      Foreground="#666666"
                      Text="Ready"/>
        </Border>
    </Grid>
</Window>