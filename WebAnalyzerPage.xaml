<Page x:Class="ModernDesktopApp.WebAnalyzerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Background="#252526">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>   <!-- URL Header -->
            <RowDefinition Height="*"/>    <!-- Content with Tabs -->
        </Grid.RowDefinitions>

        <!-- URL Header -->
        <Border Grid.Row="0" 
                Background="#252525" 
                BorderBrush="#333" 
                BorderThickness="0,0,0,1"
                Padding="15,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Back Button -->
                <Button Grid.Column="0" 
                       Content="â—€" 
                       Width="35" 
                       Height="35"
                       Margin="0,0,5,0"
                       Background="#3C3C3C"
                       Foreground="#CCCCCC"
                       BorderThickness="0"
                       FontSize="14"
                       Cursor="Hand"
                       Click="Back_Click"
                       ToolTip="Back">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#3C3C3C"/>
                            <Setter Property="Foreground" Value="#CCCCCC"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#4A9EFF"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- URL TextBox -->
                <TextBox x:Name="UrlTextBox" 
                        Grid.Column="1"
                        Height="35"
                        Margin="5,0"
                        Padding="10,8"
                        Background="#1E1E1E"
                        Foreground="#CCCCCC"
                        BorderBrush="#3C3C3C"
                        BorderThickness="1"
                        FontSize="13"
                        VerticalContentAlignment="Center"
                        Text="https://www.google.com"
                        KeyDown="UrlTextBox_KeyDown"/>

                <!-- Go/Lookup Button -->
                <Button Grid.Column="2" 
                       Content="ðŸ”" 
                       Width="35" 
                       Height="35"
                       Margin="5,0"
                       Background="#4A9EFF"
                       Foreground="White"
                       BorderThickness="0"
                       FontSize="16"
                       Cursor="Hand"
                       Click="Go_Click"
                       ToolTip="Navigate">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#4A9EFF"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#007ACC"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Refresh Button -->
                <Button Grid.Column="3" 
                       Content="ðŸ”„" 
                       Width="35" 
                       Height="35"
                       Margin="5,0,0,0"
                       Background="#3C3C3C"
                       Foreground="#CCCCCC"
                       BorderThickness="0"
                       FontSize="14"
                       Cursor="Hand"
                       Click="Refresh_Click"
                       ToolTip="Refresh">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#3C3C3C"/>
                            <Setter Property="Foreground" Value="#CCCCCC"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#4A9EFF"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Forward Button -->
                <Button Grid.Column="4" 
                       Content="â–¶" 
                       Width="35" 
                       Height="35"
                       Margin="5,0,0,0"
                       Background="#3C3C3C"
                       Foreground="#CCCCCC"
                       BorderThickness="0"
                       FontSize="14"
                       Cursor="Hand"
                       Click="Forward_Click"
                       ToolTip="Forward">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#3C3C3C"/>
                            <Setter Property="Foreground" Value="#CCCCCC"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#4A9EFF"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Tab Control for Browser/View Source -->
        <TabControl Grid.Row="1" 
                   Background="#252526"
                   BorderThickness="0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Background" Value="#2D2D30"/>
                    <Setter Property="Foreground" Value="#CCCCCC"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="15,8"/>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border x:Name="Border"
                                       Background="{TemplateBinding Background}"
                                       BorderThickness="0,0,0,3"
                                       BorderBrush="Transparent"
                                       Padding="{TemplateBinding Padding}">
                                    <ContentPresenter ContentSource="Header"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#1E1E1E"/>
                                        <Setter TargetName="Border" Property="BorderBrush" Value="#4A9EFF"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#3C3C3C"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <!-- Browser Tab -->
            <TabItem Header="ðŸŒ Browser">
                <Grid Background="#1E1E1E">
                    <wv2:WebView2 x:Name="WebBrowser" 
                                 Source="https://www.google.com"/>
                    
                    <!-- Loading Indicator -->
                    <Border x:Name="LoadingIndicator" 
                           Background="#1E1E1E"
                           Visibility="Collapsed"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center">
                        <StackPanel>
                            <TextBlock Text="Loading..." 
                                      FontSize="16"
                                      Foreground="#4A9EFF"
                                      HorizontalAlignment="Center"
                                      Margin="0,0,0,10"/>
                            <ProgressBar Width="200" 
                                        Height="4"
                                        IsIndeterminate="True"
                                        Foreground="#4A9EFF"
                                        Background="#3C3C3C"
                                        BorderThickness="0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <!-- View Source Tab -->
            <TabItem Header="ðŸ“„ View Source">
                <Grid Background="#1E1E1E">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Search Bar -->
                    <Border Grid.Row="0" 
                           Background="#252525" 
                           BorderBrush="#333" 
                           BorderThickness="0,0,0,1"
                           Padding="15,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                      Text="ðŸ”"
                                      FontSize="16"
                                      Foreground="#4A9EFF"
                                      VerticalAlignment="Center"
                                      Margin="0,0,10,0"/>

                            <TextBox x:Name="SearchTextBox"
                                    Grid.Column="1"
                                    Height="30"
                                    Padding="8,5"
                                    Background="#1E1E1E"
                                    Foreground="#CCCCCC"
                                    BorderBrush="#3C3C3C"
                                    BorderThickness="1"
                                    FontSize="12"
                                    VerticalContentAlignment="Center"
                                    TextChanged="SearchTextBox_TextChanged"
                                    KeyDown="SearchTextBox_KeyDown"/>

                            <Button Grid.Column="2"
                                   Content="â–²"
                                   Width="30"
                                   Height="30"
                                   Margin="5,0,0,0"
                                   Background="#3C3C3C"
                                   Foreground="#CCCCCC"
                                   BorderThickness="0"
                                   FontSize="12"
                                   Cursor="Hand"
                                   Click="FindPrevious_Click"
                                   ToolTip="Find Previous (Shift+Enter)">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#3C3C3C"/>
                                        <Setter Property="Foreground" Value="#CCCCCC"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#4A9EFF"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <Button Grid.Column="3"
                                   Content="â–¼"
                                   Width="30"
                                   Height="30"
                                   Margin="5,0,0,0"
                                   Background="#3C3C3C"
                                   Foreground="#CCCCCC"
                                   BorderThickness="0"
                                   FontSize="12"
                                   Cursor="Hand"
                                   Click="FindNext_Click"
                                   ToolTip="Find Next (Enter)">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#3C3C3C"/>
                                        <Setter Property="Foreground" Value="#CCCCCC"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#4A9EFF"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <TextBlock x:Name="SearchResultsText"
                                      Grid.Column="4"
                                      Margin="10,0,0,0"
                                      VerticalAlignment="Center"
                                      Foreground="#888888"
                                      FontSize="11"/>
                        </Grid>
                    </Border>

                    <!-- Source Code -->
                    <ScrollViewer Grid.Row="1"
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Auto"
                                 x:Name="SourceScrollViewer">
                        <TextBox x:Name="SourceTextBox"
                                Background="#1E1E1E"
                                Foreground="#CE9178"
                                FontFamily="Consolas"
                                FontSize="12"
                                BorderThickness="0"
                                Padding="15"
                                TextWrapping="Wrap"
                                AcceptsReturn="True"
                                IsReadOnly="True"
                                VerticalScrollBarVisibility="Auto"
                                HorizontalScrollBarVisibility="Auto"/>
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Page>