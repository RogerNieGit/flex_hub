<Window x:Class="ModernDesktopApp.FlexHubWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModernDesktopApp"
        mc:Ignorable="d"
        Title="FlexHub"
        Height="900" 
        Width="1600"
        WindowState="Maximized"
        WindowStyle="None"
        Background="#1E1E1E">
    
    <Window.Resources>
        <!-- Docker Icon Button Style -->
        <Style x:Key="DockerIconButton" TargetType="Button">
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#4A9EFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="2,0,0,0"
                                BorderBrush="Transparent"
                                x:Name="border">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3C3C3C"/>
                            </Trigger>
                            <DataTrigger Binding="{Binding IsActive, RelativeSource={RelativeSource Self}}" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#4A9EFF"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Menu Item Style -->
        <Style x:Key="MenuItemStyle" TargetType="MenuItem">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>

        <!-- Style for SubMenu Items to prevent greyed out appearance -->
        <Style TargetType="MenuItem">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="Background" Value="#2D2D30"/>
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="#3E3E42"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="#656565"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Separator style for dark theme -->
        <Style TargetType="Separator">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="Margin" Value="5,2"/>
        </Style>
    </Window.Resources>

    <!-- Main App Container -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>      <!-- Menu Bar -->
            <RowDefinition Height="*"/>       <!-- App Body -->
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Border Grid.Row="0" 
                Background="#3C3C3C" 
                BorderBrush="#2B2B2B" 
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Draggable Area (behind menu) -->
                <Border Grid.Column="0" 
                        Background="Transparent"
                        MouseLeftButtonDown="MenuBar_MouseLeftButtonDown"/>

                <!-- Menu Items -->
                <Menu Grid.Column="0" 
                      Background="Transparent" 
                      Foreground="#CCCCCC"
                      VerticalAlignment="Center">
                    <MenuItem Header="File" Padding="10,5">
                        <MenuItem Header="Open File" Click="OpenFile_Click" Padding="10,5"/>
                        <MenuItem Header="Open Folder" Click="OpenFolder_Click" Padding="10,5"/>
                        <Separator/>
                        <MenuItem Header="Exit" Click="Exit_Click" Padding="10,5"/>
                    </MenuItem>
                    <MenuItem Header="Edit" Padding="10,5">
                        <MenuItem Header="Settings" Click="Settings_Click" Padding="10,5"/>
                    </MenuItem>
                    <MenuItem Header="View" Padding="10,5">
                        <MenuItem Header="Zoom In" Click="ZoomIn_Click" Padding="10,5"/>
                        <MenuItem Header="Zoom Out" Click="ZoomOut_Click" Padding="10,5"/>
                        <MenuItem Header="Reset Zoom" Click="ResetZoom_Click" Padding="10,5"/>
                    </MenuItem>
                    <MenuItem Header="Help" Padding="10,5">
                        <MenuItem Header="About" Click="About_Click" Padding="10,5"/>
                    </MenuItem>
                </Menu>

                <!-- Window Controls -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="ðŸ—•" Width="46" Height="35" 
                           Background="Transparent" Foreground="#CCCCCC" BorderThickness="0"
                           Click="Minimize_Click"/>
                    <Button x:Name="MaximizeButton" Content="ðŸ—–" Width="46" Height="35"
                           Background="Transparent" Foreground="#CCCCCC" BorderThickness="0"
                           Click="Maximize_Click"/>
                    <Button Content="âœ•" Width="46" Height="35"
                           Background="Transparent" Foreground="#CCCCCC" BorderThickness="0"
                           Click="Close_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#CCCCCC"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E81123"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- App Body -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="48"/>     <!-- Docker Bar -->
                <ColumnDefinition Width="*"/>      <!-- Main Area -->
                <ColumnDefinition Width="390"/>    <!-- Sidebar (1.3x wider) -->
            </Grid.ColumnDefinitions>

            <!-- Docker Bar -->
            <Border Grid.Column="0" 
                    Background="#2B2B2B" 
                    BorderBrush="#1E1E1E" 
                    BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Top Icons -->
                    <StackPanel Grid.Row="0" VerticalAlignment="Top">
                        <Button Style="{StaticResource DockerIconButton}" 
                               Content="ðŸ " 
                               Click="Home_Click"
                               ToolTip="Home"/>
                        <Button Style="{StaticResource DockerIconButton}" 
                               Content="ðŸŒ" 
                               Click="WebAnalyzer_Click"
                               ToolTip="Web Analyzer"/>
                        <Button Style="{StaticResource DockerIconButton}" 
                               Content="ðŸ“" 
                               Click="QuickBook_Click"
                               ToolTip="Quick Book"/>
                        <Button Style="{StaticResource DockerIconButton}" 
                               Content="ðŸ“Š" 
                               Click="Analytics_Click"
                               ToolTip="Analytics"/>
                    </StackPanel>

                    <!-- Bottom Icons -->
                    <StackPanel Grid.Row="1" VerticalAlignment="Bottom">
                        <Button Style="{StaticResource DockerIconButton}" 
                               Content="ðŸ‘¤" 
                               Click="Profile_Click"
                               ToolTip="Profile"/>
                        <Button Style="{StaticResource DockerIconButton}" 
                               Content="âš™ï¸" 
                               Click="Settings_Click"
                               ToolTip="Settings"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Area -->
            <Grid Grid.Column="1" Background="#1E1E1E">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>   <!-- Title Header -->
                    <RowDefinition Height="*"/>    <!-- Content Area -->
                </Grid.RowDefinitions>

                <!-- Title Header -->
                <Border Grid.Row="0" 
                       Background="#2D2D30" 
                       BorderBrush="#4A9EFF" 
                       BorderThickness="0,0,0,3"
                       Padding="20,0">
                    <StackPanel VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="HeaderIcon" 
                                      Text="ðŸ " 
                                      FontSize="42" 
                                      Foreground="#4A9EFF"
                                      Margin="0,0,15,0"
                                      VerticalAlignment="Center"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock x:Name="HeaderTitle"
                                          Text="Welcome to FlexHub"
                                          FontSize="18"
                                          FontWeight="SemiBold"
                                          Foreground="White"/>
                                <TextBlock x:Name="HeaderSubtitle" 
                                          Text="Modern .NET 8 WPF Application" 
                                          FontSize="12" 
                                          FontFamily="Consolas"
                                          Foreground="#888888"
                                          Margin="0,2,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Content Area -->
                <Border Grid.Row="1" Background="#252526">
                    <Frame x:Name="ContentFrame" 
                          NavigationUIVisibility="Hidden"
                          Background="Transparent"/>
                </Border>
            </Grid>

            <!-- Sidebar -->
            <Border Grid.Column="2" 
                   Background="#252526" 
                   BorderBrush="#3C3C3C" 
                   BorderThickness="1,0,0,0">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>  <!-- Header area -->
                        <RowDefinition Height="*"/>     <!-- Content area - fills remaining space -->
                    </Grid.RowDefinitions>
                    
                    <!-- This will be replaced by code, keeping as placeholder -->
                    <StackPanel x:Name="SidebarContent" Grid.Row="0" Grid.RowSpan="2">
                        <TextBlock Text="SIDEBAR" 
                                  FontSize="14" 
                                  FontWeight="SemiBold"
                                  Foreground="#888888"
                                  Margin="0,0,0,15"/>
                        
                        <TextBlock Text="Navigation" 
                                  FontSize="13" 
                                  Foreground="#CCCCCC"
                                  Margin="0,0,0,10"/>
                        
                        <Border Background="#1E1E1E" 
                               CornerRadius="4" 
                               Padding="10"
                               Margin="0,0,0,10">
                            <TextBlock Text="Quick access and tools will appear here based on the selected view." 
                                      FontSize="12" 
                                      Foreground="#888888"
                                      TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>