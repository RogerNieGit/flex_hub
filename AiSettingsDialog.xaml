<Window x:Class="ModernDesktopApp.AiSettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AI Configuration" 
        Height="350" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1E1E1E">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸ¤– AI Configuration" 
                      FontSize="20" 
                      FontWeight="SemiBold"
                      Foreground="#4A9EFF"
                      Margin="0,0,0,10"/>
            <TextBlock Text="Configure Fuelix AI settings for HTML analysis" 
                      FontSize="12" 
                      Foreground="#888888"/>
        </StackPanel>

        <!-- Settings Form -->
        <StackPanel Grid.Row="1">
            <!-- API Key -->
            <TextBlock Text="API Key" 
                      FontSize="12" 
                      FontWeight="SemiBold"
                      Foreground="#CCCCCC"
                      Margin="0,0,0,5"/>
            <PasswordBox x:Name="ApiKeyBox"
                        Height="35"
                        Padding="10,8"
                        Background="#252526"
                        Foreground="#CCCCCC"
                        BorderBrush="#3C3C3C"
                        BorderThickness="1"
                        FontSize="12"
                        Margin="0,0,0,15"/>

            <!-- Base URL -->
            <TextBlock Text="Base URL" 
                      FontSize="12" 
                      FontWeight="SemiBold"
                      Foreground="#CCCCCC"
                      Margin="0,0,0,5"/>
            <TextBox x:Name="BaseUrlBox"
                    Height="35"
                    Padding="10,8"
                    Background="#252526"
                    Foreground="#CCCCCC"
                    BorderBrush="#3C3C3C"
                    BorderThickness="1"
                    FontSize="12"
                    Text="https://proxy.fuelix.ai/v1"
                    Margin="0,0,0,15"/>

            <!-- Model -->
            <TextBlock Text="Model" 
                      FontSize="12" 
                      FontWeight="SemiBold"
                      Foreground="#CCCCCC"
                      Margin="0,0,0,5"/>
            <ComboBox x:Name="ModelComboBox"
                     Height="35"
                     Background="#252526"
                     Foreground="#CCCCCC"
                     BorderBrush="#3C3C3C"
                     BorderThickness="1"
                     FontSize="12"
                     Margin="0,0,0,15">
                <ComboBoxItem Content="gpt-4o-mini" IsSelected="True"/>
                <ComboBoxItem Content="gpt-4o"/>
                <ComboBoxItem Content="gpt-3.5-turbo"/>
                <ComboBoxItem Content="claude-3-5-sonnet-20241022"/>
            </ComboBox>

            <!-- Info Text -->
            <Border Background="#252525" 
                   BorderBrush="#3C3C3C" 
                   BorderThickness="1"
                   CornerRadius="4" 
                   Padding="10"
                   Margin="0,5,0,0">
                <TextBlock TextWrapping="Wrap" 
                          FontSize="11" 
                          Foreground="#888888">
                    <Run Text="â„¹ï¸ Get your API key from "/>
                    <Hyperlink NavigateUri="https://proxy.fuelix.ai" 
                              RequestNavigate="Hyperlink_RequestNavigate"
                              Foreground="#4A9EFF">
                        proxy.fuelix.ai
                    </Hyperlink>
                    <LineBreak/>
                    <Run Text="Your API key is stored securely and only used for HTML analysis."/>
                </TextBlock>
            </Border>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right"
                   Margin="0,20,0,0">
            <Button Content="Test Connection" 
                   Width="120" 
                   Height="35"
                   Margin="0,0,10,0"
                   Background="#3C3C3C"
                   Foreground="#CCCCCC"
                   BorderThickness="0"
                   Click="TestConnection_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#3C3C3C"/>
                        <Setter Property="Foreground" Value="#CCCCCC"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4A9EFF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            
            <Button Content="Cancel" 
                   Width="80" 
                   Height="35"
                   Margin="0,0,10,0"
                   Background="#3C3C3C"
                   Foreground="#CCCCCC"
                   BorderThickness="0"
                   Click="Cancel_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#3C3C3C"/>
                        <Setter Property="Foreground" Value="#CCCCCC"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E81123"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            
            <Button Content="Save" 
                   Width="80" 
                   Height="35"
                   Background="#4A9EFF"
                   Foreground="White"
                   BorderThickness="0"
                   Click="Save_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#4A9EFF"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#007ACC"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>